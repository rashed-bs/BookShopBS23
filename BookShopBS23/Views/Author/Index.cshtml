@model IEnumerable<BookShopBS23.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" style="text-decoration: none; float:right">
        <h5>Create New</h5>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.AuthorPhoto)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-action="Details" asp-route-id="@item.AuthorId" style="text-decoration: none;">
                    @Html.DisplayFor(modelItem => item.AuthorName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
    @*        <td>
                @Html.DisplayFor(modelItem => item.AuthorPhoto)
            </td>*@
            <td>
                    <a asp-action="Edit" asp-route-id="@item.AuthorId" style="text-decoration: none;">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.AuthorId" style="text-decoration: none;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
