@model BookShopBS23.ViewModels.BookEditViewModel

@{
    ViewBag.Title = "Edit the Book";
}

<h1>@ViewBag.Title</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookId" />
            <div class="form-group mt-1">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="publicationDate" class="control-label"></label>
                <input asp-for="publicationDate" class="form-control" />
                <span asp-validation-for="publicationDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control" >
                    @foreach (var author in ViewBag.Authors)
                    {
                        <option value="@author.AuthorId">@author.AuthorName</option>
                    }
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <label asp-for="CoverPhoto" class="control-label"></label>
                <input asp-for="CoverPhoto" id="fileInput" onchange="PreviewFile()" class="form-control" type="file" />
                <span asp-validation-for="CoverPhoto" class="text-danger"></span>
            </div>

            <div class="form-group mt-1">
                @*preview file*@
                <img id="preview" src="#" alt="Preview" style="max-width: 100%; max-height: 100%; display: none">
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<script>
    function PreviewFile() {
        const preview = document.getElementById('preview');
        const file = document.getElementById('fileInput').files[0];
        const reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
            preview.style.display = 'block';
        }

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
